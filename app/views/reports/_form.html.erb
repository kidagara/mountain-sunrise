<%= form_for [@report] do |f| %>
	<%= content_tag :div, class: "alert-box radius alert" do %>
		<h4><%= pluralize @report.errors.count, "error" %> kept this form from submitting</h4>
		<ul>
			<% @report.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end if @report.errors.any? %>

	<%= f.label :date %>
	<%= f.date :date %>
	<%= f.label :analysis_product %>
	<%= f.text_field :analysis_product %>
	<%= f.submit class: "button radius" %>
<% end %>